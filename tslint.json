{
    "extends": "tslint-react",
    "rules": {
        "align": [
            false
        ],
        "trailing-comma": [
            true, {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "no-unused-variable": true,
        "semicolon": [true, "always"],
        "ter-indent": [true, 4, "spaces"]
    },
    "types": [
        "node"
    ]
}