{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "es5",
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictNullChecks": true,
      "module": "commonjs",
      "jsx": "react",
      "lib": [
        "es5",
        "es6",
        "dom",
        "es2015.core",
        "es2015.collection",
        "es2015.generator",
        "es2015.iterable",
        "es2015.promise",
        "es2015.proxy",
        "es2015.reflect",
        "es2015.symbol",
        "es2015.symbol.wellknown",
        "esnext.asynciterable"
      ],
      "types": [
        "node"
      ]
    },
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "**/*.resource.ts",
      "webpack.config.js",
      "vendor",
      "public",
      "themes"
    ]
  }